{
  "compilerOptions": {
    "target": "ES2018",
    "jsx": "preserve",
    "jsxFactory": "h",
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "experimentalDecorators": true,
    "baseUrl": ".",
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@pizza-ui/*": ["packages/pizza-ui/*"],
      "pizza-ui": ["packages/pizza-ui/components"]
    },
    "resolveJsonModule": true,
    "types": ["unplugin-vue-define-options/macros-global"],
    "allowJs": false,
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "importHelpers": true,
    "removeComments": false,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["**/node_modules/**"]
}
