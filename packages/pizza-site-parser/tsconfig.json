{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "types": ["node"],
    "rootDir": "."
  },
  "include": ["src/**/*"],
  "exclude": ["**/node_modules/**"]
}

